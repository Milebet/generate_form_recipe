<div class="container-form">
  <h2>Cambio de contrase単a</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="row">
       <div class="form-inputs">
          <div class="col-md-offset-3 col-md-6">
          <%= f.input :password,
                      label: false,
                      required: true,
                      autofocus: true,
                      hint: ("Minimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", placeholder: "Nueva Contrase単a" } %>
          </div>
      </div>
    </div>
    <div class="row">
       <div class="form-inputs">
          <div class="col-md-offset-3 col-md-6">
          <%= f.input :password_confirmation, label: false, required: true, input_html: {placeholder: "Confirmar Contrase単a" } %>
          </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Cambiar mi contrase単a", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "doctors/shared/links" %>
</div>
