<div class="nested-fields well well-compact">
	<div class="form-group">
    <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-heartbeat bigicon"></i></span>
    <div class="col-md-8">
      <%= f.input :medicine_name,
          label: false,
          required: true,
          placeholder: "Nombre del medicamento",
          class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
      <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-check-square-o bigicon"></i></span>
      <div class="col-md-8">
        <%= f.input :quantity,
            label: false,
            required: true,
            placeholder: "Cantidad a tomar",
            hint: "Ejemplo: 1 caja, 2 comprimidos, etc.",
            class: "form-control"%>
      </div>
  </div>
  <div class="form-group">
      <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
      <div class="col-md-8">
        <%= f.input :indications,
            label: false,
            required: true,
            placeholder: "Indicaciones de consumo",
            hint: "Indique detallamente las instrucciones.",
            class: "form-control"%>
      </div>
  </div>
  <div class="form-group">
    <div class="col-md-8">
      <%= link_to_remove_association "remove medicine", f, html: {class: 'glyphicon glyphicon-remove'} %>	
    </div>
  </div>
</div>
