<div class="col-md-offset-2 col-md-8">
    <div class="well well-sm">
        <%= simple_form_for(@recipe, :method => :post, html: {class: "form-horizontal"})  do |r| %>
            <legend class="text-center header">Datos del Paciente</legend>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-id-card bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :document_type,
                        label: false,
                        required: true,
                        placeholder: "Tipo de documento",
                        class: "form-control",
                        collection: ["Cédula","Pasaporte","RUC Natural"]%>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-id-card bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :document,
                        label: false,
                        required: true,
                        placeholder: "Número de Documento",
                        class: "form-control"%>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :full_name,
                        label: false,
                        required: true,
                        placeholder: "Nombre Completo",
                        class: "form-control"
                        %>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :email,
                        label: false,
                        required: true,
                        placeholder: "Correo Electrónico",
                        class: "form-control"
                        %>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa  fa-mobile bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :cell_phone,
                        label: false,
                        required: false,
                        placeholder: "Teléfono Celular",
                        input_html: { maxlength: 10 },
                        class: "form-control"%>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :local_phone,
                        label: false,
                        required: false,
                        placeholder: "Teléfono Local",
                        input_html: { maxlength: 15 },
                        class: "form-control"%>
                </div>
            </div>
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-eye bigicon"></i></span>
                <div class="col-md-8">
                    <%= r.input :observation,
                        label: false,
                        required: false,
                        placeholder: "Observaciones Génerales",
                        class: "form-control"%>
                </div>
            </div>
            <legend class="text-center header">Detalles de la receta</legend>
            <%= r.simple_fields_for :recipe_details do |rd| %>
            <div class="nested-fields well well-compact">
        	    <%= render 'recipe_detail_fields', f: rd %>
                <div class="form-group">
                    <div class="col-md-8">
        	           <%= link_to_add_association 'add_medicine', r, :recipe_details %>
                    </div>
                </div>
            </div>
            <% end %>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <%= r.button :submit, "Generar", class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
    </div>
</div>